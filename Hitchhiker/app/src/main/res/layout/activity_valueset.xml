<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="1380px"
    android:layout_height="match_parent" android:background="#FFFFFF"
    android:padding="40dp">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/solo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/text_selection"
        android:text="혼자 또는 친구와"
        android:textColor="#ECB0B0"
        android:textSize="12sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="학교 가기"
        android:id="@+id/text_go_to_school"
        android:textSize="20sp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/text_selection"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_count">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/minus"
            android:layout_centerVertical="true"
            android:id="@+id/button_minus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="120sp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/button_minus"
            android:id="@+id/text_count"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/text_count"
            android:layout_centerVertical="true"
            android:id="@+id/button_plus"/>

    </RelativeLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="인원을 입력해주세요"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_add_count"
        android:textSize="13sp"
        android:textColor="#999999"
        android:layout_below="@id/layout_count"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_startMatching"
            android:text="매칭 시작"
            android:textSize="18sp"
            android:textColor="#D0011B"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_cancel"
            android:layout_below="@id/button_startMatching"
            android:layout_marginTop="7dp"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#999999"/>
    </RelativeLayout>

</RelativeLayout>